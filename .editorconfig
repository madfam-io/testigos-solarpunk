# EditorConfig ayuda a mantener estilos de c√≥digo consistentes
# entre diferentes editores y IDEs
# editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{md,mdx}]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

[*.py]
indent_size = 4

[Makefile]
indent_style = tab

[*.{json,jsonc,json5}]
indent_size = 2

[*.{js,jsx,ts,tsx,astro,vue,css,scss,html}]
indent_size = 2

[{package.json,package-lock.json,pnpm-lock.yaml}]
indent_size = 2