# Environment Variables for Testigos de Solarpunk

# Deployment Environment
# Options: development, staging, production
NODE_ENV=development

# API Configuration (if needed in future)
API_URL=

# Analytics (optional)
GOOGLE_ANALYTICS_ID=
PLAUSIBLE_DOMAIN=

# Social Media Integration
TWITTER_API_KEY=
INSTAGRAM_ACCESS_TOKEN=
TIKTOK_API_KEY=

# Content Management (future)
CMS_API_URL=
CMS_API_KEY=

# Vercel Configuration (for CI/CD)
# These should be set in GitHub Secrets, not in .env files
# VERCEL_ORG_ID=
# VERCEL_PROJECT_ID=
# VERCEL_TOKEN=

# Custom Domain Configuration
CUSTOM_DOMAIN=universo.testigosdesolarpunk.mx

# Feature Flags
ENABLE_PODCAST=false
ENABLE_MADLAB=false
ENABLE_COMMENTS=false

# Performance
ENABLE_COMPRESSION=true
ENABLE_IMAGE_OPTIMIZATION=true

# Development
DEBUG=false
VERBOSE_LOGGING=false