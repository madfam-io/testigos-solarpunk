{
  "name": "testigos-solarpunk",
  "version": "0.4.0",
  "description": "Proyecto MADFAM que conecta, concientiza y crea comunidad a travÃ©s del humor sostenible con estrategia de 3 fases",
  "author": "MADFAM",
  "license": "CC-BY-SA-4.0",
  "type": "module",
  "scripts": {
    "dev": "astro dev --host",
    "dev:local": "astro dev --host --config astro.config.dev.mjs",
    "dev:vercel": "astro dev --host --config astro.config.vercel.mjs",
    "prebuild": "NODE_ENV=production node scripts/build-sw.js",
    "build": "node scripts/generate-manifest.js --github && npm run check:all && astro build",
    "build:github": "node scripts/generate-manifest.js --github && npm run check:all && astro build",
    "build:vercel": "node scripts/generate-manifest.js --vercel && npm run lint && npm run type-check && astro build --config astro.config.vercel.mjs",
    "build:analyze": "ANALYZE=true npm run build",
    "preview": "astro preview",
    "preview:vercel": "astro preview --config astro.config.vercel.mjs",
    "check:all": "npm run lint && npm run type-check && npm run test",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx,.astro",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx,.astro --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "node scripts/type-check.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "analyze": "astro build",
    "lighthouse": "lhci autorun",
    "lighthouse:local": "node scripts/lighthouse-local.js",
    "lighthouse:multi": "node scripts/lighthouse-multi-test.js",
    "health:check": "tsx scripts/health-check-all.ts",
    "health:i18n": "tsx scripts/health-check-i18n.ts",
    "health:themes": "tsx scripts/health-check-themes.ts",
    "health:performance": "tsx scripts/health-check-performance.ts",
    "health:accessibility": "tsx scripts/health-check-accessibility.ts",
    "health:report": "npm run health:check && open reports/health-check-summary.html",
    "health:fix": "npm run lint:fix && npm run format",
    "update-deps": "npm-check-updates -u",
    "clean": "rm -rf dist .astro node_modules",
    "deploy": "npm run build && gh-pages -d dist",
    "deploy:github": "npm run build:github && gh-pages -d dist",
    "deploy:vercel": "vercel --prod",
    "deploy:custom": "npm run build && echo 'universo.testigosdesolarpunk.mx' > dist/CNAME && gh-pages -d dist",
    "prepare": "husky install",
    "optimize:images": "node scripts/optimize-images.js",
    "generate:icons": "node scripts/generate-icons.js",
    "new:character": "node scripts/new-character.js",
    "new:script": "echo 'Script para crear guiones pendiente de implementar'",
    "check:routes": "node scripts/check-routes.js",
    "check:links": "node scripts/validate-links.js",
    "analyze:bundle": "astro build",
    "audit:navigation": "node scripts/audit-navigation.js",
    "audit:accessibility": "node scripts/check-accessibility.js",
    "audit:all": "npm run audit:navigation && npm run audit:accessibility",
    "fix:styling": "prettier --write 'src/**/*.{astro,css,ts,tsx}'",
    "fix:all": "npm run fix:styling && npm run audit:all"
  },
  "dependencies": {
    "@astrojs/sitemap": "^3.2.1",
    "astro": "^5.10.1"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@lhci/cli": "^0.15.1",
    "@types/fs-extra": "^11.0.4",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20.19.0",
    "@types/pa11y": "^5.3.7",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "chalk": "^5.3.0",
    "chrome-launcher": "^1.1.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-astro": "^0.31.4",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "fs-extra": "^11.2.0",
    "gh-pages": "^6.1.1",
    "glob": "^10.3.10",
    "husky": "^9.0.10",
    "jsdom": "^24.0.0",
    "lighthouse": "^12.7.0",
    "lint-staged": "^15.2.10",
    "ora": "^7.0.1",
    "pa11y": "^8.0.0",
    "playwright": "^1.48.2",
    "prettier": "^3.2.4",
    "prettier-plugin-astro": "^0.13.0",
    "rollup-plugin-visualizer": "^6.0.3",
    "terser": "^5.43.1",
    "tsx": "^4.20.3",
    "typescript": "^5.3.3",
    "vite": "^7.0.0",
    "vite-plugin-compression": "^0.5.1",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,astro}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,md,json,yml,yaml}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/madfam-io/testigos-solarpunk.git"
  },
  "keywords": [
    "solarpunk",
    "narrative",
    "universe",
    "madfam",
    "astro",
    "static-site",
    "storytelling"
  ],
  "bugs": {
    "url": "https://github.com/madfam-io/testigos-solarpunk/issues"
  },
  "homepage": "https://madfam-io.github.io/testigos-solarpunk"
}
