import '../styles/nav-theme-fix.css';

export interface Props {
  title: string;
  description?: string;
  image?: string;
  noindex?: boolean;
  lang?: string;
}

const {
  title,
  description = 'Testigos de Solarpunk - Universo narrativo evangelista ecol√≥gico que combina humor, sostenibilidad y esperanza',
  image = '/og-image.svg',
  noindex = false,
  lang = 'es-MX',
} = Astro.props;

const currentPath = Astro.url.pathname;
const baseUrl =
  import.meta.env.SITE !== ''
    ? import.meta.env.SITE
    : 'https://madfam-io.github.io';
let basePath =
  import.meta.env.BASE_URL !== ''
    ? import.meta.env.BASE_URL
    : '/testigos-solarpunk';

// Ensure basePath doesn't end with a slash
if (basePath.endsWith('/')) {
  basePath = basePath.slice(0, -1);
}

const fullUrl = `${baseUrl}${basePath}${currentPath}`;
const imageUrl = `${baseUrl}${basePath}${image}`;

// Detect current language from path
const currentLang = detectLanguage(currentPath);

// Get translation function for current language
const t = useTranslations(currentLang);

// Helper function to generate language-aware URLs with proper route translation
const getLangPath = (path: string): string => {
  // Remove leading slash if present
  const cleanPath = path.startsWith('/') ? path.slice(1) : path;
  // Use the proper localized path function that translates routes
  const localizedPath = getLocalizedPath(cleanPath, currentLang);
  return `${basePath}${localizedPath}`;
};
