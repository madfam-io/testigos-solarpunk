---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { useTranslations } from '@/i18n/config';

const lang = 'en';
const t = useTranslations(lang);
let basePath =
  import.meta.env.BASE_URL != null && import.meta.env.BASE_URL !== ''
    ? import.meta.env.BASE_URL
    : '/testigos-solarpunk';

// Ensure basePath doesn't end with a slash
if (basePath.endsWith('/')) {
  basePath = basePath.slice(0, -1);
}
---

<BaseLayout
  lang={lang}
  title={t('madlab.title')}
  description="Educational events and experiences that transform communities"
>
  <section class="hero-madlab">
    <div class="container">
      <span class="fase-label">Phase 3: Conversion</span>
      <h1>MADLAB</h1>
      <p class="hero-description">
        Sustainable innovation labs: events, experiences and school activations
        that generate real impact
      </p>

      <div class="madlab-preview">
        <div class="preview-stats">
          <div class="stat">
            <span class="stat-icon"
              ><span class="emoji-cutout emoji-md theme-green">üè´</span></span
            >
            <span class="stat-value">10</span>
            <span class="stat-label">Target schools</span>
          </div>
          <div class="stat">
            <span class="stat-icon"
              ><span class="emoji-cutout emoji-md theme-community">üë•</span
              ></span
            >
            <span class="stat-value">5,000+</span>
            <span class="stat-label">Students</span>
          </div>
          <div class="stat">
            <span class="stat-icon"
              ><span class="emoji-cutout emoji-md theme-green">üå±</span></span
            >
            <span class="stat-value">100%</span>
            <span class="stat-label">Direct impact</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="madlab-concept">
    <div class="container">
      <h2>What is MADLAB?</h2>
      <div class="concept-grid">
        <div class="concept-text">
          <p class="lead">
            MADLAB is the natural evolution of our project: after attracting
            with humor and connecting with deep content, it's time to generate
            real action.
          </p>
          <p>
            Through immersive educational experiences, hands-on workshops and
            school activations, we bring sustainability from the digital world
            to real life.
          </p>
          <ul class="concept-list">
            <li>Solar energy workshops</li>
            <li>School urban gardens</li>
            <li>Green solutions hackathons</li>
            <li>Sustainable science fairs</li>
          </ul>
        </div>
        <div class="concept-visual">
          <div class="visual-placeholder">
            <span class="emoji-cutout emoji-lg theme-green visual-icon">üî¨</span
            >
            <p>Experiences that transform</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="madlab-programs">
    <div class="container">
      <h2>MADLAB Programs</h2>
      <div class="programs-grid">
        <div class="program-card">
          <div class="program-header">
            <span class="program-icon"
              ><span class="emoji-cutout emoji-lg theme-solar flutter">‚òÄÔ∏è</span
              ></span
            >
            <h3>Solar Lab</h3>
          </div>
          <p>
            Hands-on workshops where students build their own solar panels and
            renewable energy systems
          </p>
          <ul class="program-features">
            <li>Duration: 1 full day</li>
            <li>Age: 12-18 years</li>
            <li>Materials included</li>
          </ul>
        </div>

        <div class="program-card">
          <div class="program-header">
            <span class="program-icon emoji-cutout emoji-lg theme-green"
              >üåø</span
            >
            <h3>Green Hackers</h3>
          </div>
          <p>
            School hackathon where teams develop technological solutions for
            local environmental problems
          </p>
          <ul class="program-features">
            <li>Duration: 2 days</li>
            <li>Age: 15-18 years</li>
            <li>Prizes for winners</li>
          </ul>
        </div>

        <div class="program-card">
          <div class="program-header">
            <span class="program-icon emoji-cutout emoji-lg theme-green"
              >üå±</span
            >
            <h3>Future Garden</h3>
          </div>
          <p>
            Creation of school gardens with IoT technology for monitoring and
            smart irrigation systems
          </p>
          <ul class="program-features">
            <li>Duration: 3 months</li>
            <li>Age: 10-16 years</li>
            <li>Continuous monitoring</li>
          </ul>
        </div>

        <div class="program-card">
          <div class="program-header">
            <span class="program-icon emoji-cutout emoji-lg theme-green"
              >‚ôªÔ∏è</span
            >
            <h3>Circular School</h3>
          </div>
          <p>
            Complete transformation of the school waste system towards a
            circular economy model
          </p>
          <ul class="program-features">
            <li>Duration: 6 months</li>
            <li>Whole school</li>
            <li>Green certification</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <section class="madlab-impact">
    <div class="container">
      <h2>Expected Impact</h2>
      <div class="impact-visual">
        <div class="impact-timeline">
          <div class="timeline-item">
            <div class="timeline-marker">1</div>
            <h3>Month 1-3</h3>
            <p>First pilot activations in 3 schools</p>
          </div>
          <div class="timeline-item">
            <div class="timeline-marker">2</div>
            <h3>Month 4-6</h3>
            <p>Expansion to 10 schools with complete programs</p>
          </div>
          <div class="timeline-item">
            <div class="timeline-marker">3</div>
            <h3>Month 7-12</h3>
            <p>Network of interconnected sustainable schools</p>
          </div>
          <div class="timeline-item">
            <div class="timeline-marker">4</div>
            <h3>Year 2+</h3>
            <p>Replicable model throughout Mexico</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="madlab-sponsors">
    <div class="container">
      <h2>Sponsors</h2>
      <p class="sponsors-intro">
        MADLAB is possible thanks to the support of companies committed to
        education and sustainability
      </p>
      <div class="sponsors-benefits">
        <h3>Benefits for Sponsors</h3>
        <div class="benefits-grid">
          <div class="benefit-item">
            <span class="benefit-icon emoji-cutout emoji-lg theme-solar"
              >üéØ</span
            >
            <h3>Direct Impact</h3>
            <p>Real connection with school communities</p>
          </div>
          <div class="benefit-item">
            <span class="benefit-icon emoji-cutout emoji-lg theme-purple"
              >üìä</span
            >
            <h3>Clear Metrics</h3>
            <p>Detailed impact and reach reports</p>
          </div>
          <div class="benefit-item">
            <span class="benefit-icon emoji-cutout emoji-lg theme-solar"
              >üèÜ</span
            >
            <h3>Recognition</h3>
            <p>Visibility as a sustainability leader</p>
          </div>
          <div class="benefit-item">
            <span class="benefit-icon emoji-cutout emoji-lg theme-community"
              >ü§ù</span
            >
            <h3>Co-creation</h3>
            <p>Participation in program design</p>
          </div>
        </div>
      </div>
      <div class="sponsor-cta">
        <a
          href={`${basePath}/en/resources/#patrocinadores`}
          class="btn btn-primary"
        >
          Become a Sponsor
        </a>
      </div>
    </div>
  </section>

  <section class="madlab-cta">
    <div class="container">
      <div class="cta-grid">
        <div class="cta-card">
          <h3>For Schools</h3>
          <p>Want to bring MADLAB to your school?</p>
          <button class="btn btn-secondary">Request Information</button>
        </div>
        <div class="cta-card">
          <h3>For Volunteers</h3>
          <p>Join as a facilitator or mentor</p>
          <a href={`${basePath}/en/community/`} class="btn btn-secondary">
            Apply
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .hero-madlab {
    background: linear-gradient(
      135deg,
      var(--verde-sostenible) 0%,
      rgba(76, 175, 80, 0.2) 100%
    );
    padding: var(--espacio-xxl) 0;
    text-align: center;
    color: var(--text-on-accent, #000000);
    position: relative;
    overflow: hidden;
  }

  .hero-madlab::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(
      circle,
      var(--torn-edge-color) 0%,
      transparent 70%
    );
    animation: pulse 4s ease-in-out infinite;
  }

  @keyframes pulse {
    0%,
    100% {
      transform: scale(1);
      opacity: 0.5;
    }
    50% {
      transform: scale(1.1);
      opacity: 0.3;
    }
  }

  .fase-label {
    background: var(--border-subtle);
    backdrop-filter: blur(10px);
    padding: 8px 20px;
    border-radius: 20px;
    font-weight: 500;
    display: inline-block;
    margin-bottom: var(--espacio-md);
    position: relative;
    z-index: 1;
  }

  .hero-madlab h1 {
    font-size: 3.5rem;
    font-weight: 900;
    margin-bottom: var(--espacio-md);
    position: relative;
    z-index: 1;
  }

  .hero-description {
    font-size: 1.2rem;
    max-width: 700px;
    margin: 0 auto var(--espacio-xl);
    opacity: 0.9;
    position: relative;
    z-index: 1;
  }

  .madlab-preview {
    margin-top: var(--espacio-xl);
    position: relative;
    z-index: 1;
  }

  .preview-stats {
    display: flex;
    justify-content: center;
    gap: var(--espacio-xxl);
  }

  .stat {
    text-align: center;
  }

  .stat-icon {
    font-size: 2.5rem;
    display: block;
    margin-bottom: var(--espacio-sm);
  }

  .stat-value {
    font-size: 2.5rem;
    font-weight: 900;
    display: block;
  }

  .stat-label {
    font-size: 0.9rem;
    opacity: 0.8;
  }

  /* Concept Section */
  .madlab-concept {
    padding: var(--espacio-xxl) 0;
    background: var(--fondo-secundario);
  }

  .madlab-concept h2 {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: var(--espacio-xl);
  }

  .concept-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--espacio-xxl);
    align-items: center;
  }

  .lead {
    font-size: 1.2rem;
    color: var(--verde-sostenible);
    margin-bottom: var(--espacio-lg);
  }

  .concept-list {
    list-style: none;
    padding: 0;
    margin-top: var(--espacio-lg);
  }

  .concept-list li {
    padding: var(--espacio-sm) 0;
    padding-left: 30px;
    position: relative;
  }

  .concept-list li::before {
    content: '‚Üí';
    position: absolute;
    left: 0;
    color: var(--verde-sostenible);
    font-weight: bold;
  }

  .visual-placeholder {
    background: linear-gradient(
      135deg,
      var(--verde-sostenible) 0%,
      var(--verde-brillante) 100%
    );
    aspect-ratio: 1;
    border-radius: 50%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: var(--text-on-accent, #000000);
    max-width: 400px;
    margin: 0 auto;
  }

  .visual-icon {
    font-size: 6rem;
    margin-bottom: var(--espacio-md);
  }

  /* Programs */
  .madlab-programs {
    padding: var(--espacio-xxl) 0;
  }

  .madlab-programs h2 {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: var(--espacio-xl);
  }

  .programs-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--espacio-xl);
  }

  .program-card {
    background: var(--bg-secondary, #1a1a1b);
    color: var(--text-primary, #ffffff);
    padding: var(--espacio-xl);
    border-radius: 16px;
    border: 1px solid var(--border-subtle, var(--torn-edge-color));
    box-shadow: 0 4px 6px var(--cutout-shadow-dark);
    transition: all 0.3s ease;
    border-top: 4px solid var(--verde-sostenible);
  }

  .program-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 12px 24px var(--shadow-overlay-dark-medium);
  }

  .program-header {
    display: flex;
    align-items: center;
    gap: var(--espacio-md);
    margin-bottom: var(--espacio-md);
  }

  .program-icon {
    font-size: 2.5rem;
  }

  .program-header h3 {
    color: var(--verde-sostenible);
  }

  .program-features {
    list-style: none;
    padding: 0;
    margin-top: var(--espacio-md);
    border-top: 1px solid var(--borde-claro);
    padding-top: var(--espacio-md);
  }

  .program-features li {
    padding: var(--espacio-xs) 0;
    color: var(--texto-secundario);
    font-size: 0.9rem;
  }

  /* Impact Timeline */
  .madlab-impact {
    padding: var(--espacio-xxl) 0;
    background: var(--fondo-secundario);
  }

  .madlab-impact h2 {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: var(--espacio-xl);
  }

  .impact-timeline {
    display: flex;
    justify-content: space-between;
    max-width: 1000px;
    margin: 0 auto;
    position: relative;
  }

  .impact-timeline::before {
    content: '';
    position: absolute;
    top: 30px;
    left: 5%;
    right: 5%;
    height: 2px;
    background: linear-gradient(
      to right,
      var(--verde-sostenible),
      var(--verde-brillante)
    );
  }

  .timeline-item {
    text-align: center;
    position: relative;
    flex: 1;
  }

  .timeline-marker {
    width: 60px;
    height: 60px;
    background: var(--bg-secondary, #1a1a1b);
    border: 3px solid var(--verde-sostenible);
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto var(--espacio-md);
    font-weight: bold;
    font-size: 1.5rem;
    color: var(--verde-sostenible);
    position: relative;
    z-index: 1;

    /* DIY Magazine Cutout aesthetic for MADLAB timeline */
    clip-path: polygon(
      14% 0%,
      86% 4%,
      96% 18%,
      100% 40%,
      98% 64%,
      100% 86%,
      84% 96%,
      62% 100%,
      38% 98%,
      16% 94%,
      0% 78%,
      2% 55%,
      0% 32%,
      16% 8%
    );
  }

  .timeline-item h3 {
    color: var(--verde-sostenible);
    margin-bottom: var(--espacio-sm);
  }

  /* Sponsors */
  .madlab-sponsors {
    padding: var(--espacio-xxl) 0;
  }

  .madlab-sponsors h2 {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: var(--espacio-md);
  }

  .sponsors-intro {
    text-align: center;
    font-size: 1.2rem;
    color: var(--texto-secundario);
    margin-bottom: var(--espacio-xxl);
  }

  .sponsors-benefits {
    background: var(--fondo-secundario);
    padding: var(--espacio-xl);
    border-radius: 16px;
    margin-bottom: var(--espacio-xl);
  }

  .sponsors-benefits h3 {
    text-align: center;
    margin-bottom: var(--espacio-xl);
    color: var(--verde-sostenible);
  }

  .benefits-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--espacio-lg);
  }

  .benefit-item {
    text-align: center;
  }

  .benefit-icon {
    font-size: 2.5rem;
    display: block;
    margin-bottom: var(--espacio-sm);
  }

  .benefit-item h3 {
    margin-bottom: var(--espacio-xs);
  }

  .sponsor-cta {
    text-align: center;
  }

  /* CTA Section */
  .madlab-cta {
    padding: var(--espacio-xxl) 0;
    background: linear-gradient(
      135deg,
      var(--fondo-primario) 0%,
      rgba(76, 175, 80, 0.05) 100%
    );
  }

  .cta-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--espacio-xl);
    max-width: 800px;
    margin: 0 auto;
  }

  .cta-card {
    background: var(--bg-secondary, #1a1a1b);
    color: var(--text-primary, #ffffff);
    padding: var(--espacio-xl);
    border-radius: 16px;
    text-align: center;
    border: 1px solid var(--border-subtle, var(--torn-edge-color));
    box-shadow: 0 4px 6px var(--cutout-shadow-dark);
  }

  .cta-card h3 {
    color: var(--verde-sostenible);
    margin-bottom: var(--espacio-md);
  }

  .cta-card p {
    color: var(--text-secondary, #cccccc);
    margin-bottom: var(--espacio-lg);
  }

  @media (max-width: 768px) {
    .hero-madlab h1 {
      font-size: 2.5rem;
    }

    .preview-stats {
      flex-direction: column;
      gap: var(--espacio-lg);
    }

    .concept-grid {
      grid-template-columns: 1fr;
      gap: var(--espacio-xl);
    }

    .impact-timeline {
      flex-direction: column;
      gap: var(--espacio-xl);
    }

    .impact-timeline::before {
      display: none;
    }
  }
</style>
