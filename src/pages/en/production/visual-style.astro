            <li>{t('production.visual.references.urban.item4')}</li>
          </ul>
          <div class="mood-colors">
            <span class="mood-color" style="background: #4CAF50"></span>
            <span class="mood-color" style="background: #81C784"></span>
            <span class="mood-color" style="background: #FFC107"></span>
          </div>
        </div>

        <div class="reference-category card">
          <h3>{t('production.visual.references.tech.title')}</h3>
          <div class="reference-mood">
            <span class="emoji-cutout emoji-lg theme-purple">üî¨</span>
          </div>
          <ul>
            <li>{t('production.visual.references.tech.item1')}</li>
            <li>{t('production.visual.references.tech.item2')}</li>
            <li>{t('production.visual.references.tech.item3')}</li>
            <li>{t('production.visual.references.tech.item4')}</li>
          </ul>
          <div class="mood-colors">
            <span class="mood-color" style="background: #2196F3"></span>
            <span class="mood-color" style="background: #9C27B0"></span>
            <span class="mood-color" style="background: #E1F5FE"></span>
          </div>
        </div>

        <div class="reference-category card">
          <h3>{t('production.visual.references.wardrobe.title')}</h3>
          <div class="reference-mood">
            <span class="emoji-cutout emoji-lg theme-community">üëï</span>
          </div>
          <ul>
            <li>{t('production.visual.references.wardrobe.item1')}</li>
            <li>{t('production.visual.references.wardrobe.item2')}</li>
            <li>{t('production.visual.references.wardrobe.item3')}</li>
            <li>{t('production.visual.references.wardrobe.item4')}</li>
          </ul>
          <div class="mood-colors">
            <span class="mood-color" style="background: #8D6E63"></span>
            <span class="mood-color" style="background: #FF5722"></span>
            <span class="mood-color" style="background: #FFC107"></span>
