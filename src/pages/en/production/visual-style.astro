          <h3>{t('production.visual.cutout.principles.title')}</h3>
          <ul>
            <li>
              <span class="emoji-cutout emoji-sm theme-solar">üìÑ</span>
              <strong
                >{
                  t('production.visual.cutout.principles.borders.title')
                }:</strong
              >
              {t('production.visual.cutout.principles.borders.description')}
            </li>
            <li>
              <span class="emoji-cutout emoji-sm theme-green">üé®</span>
              <strong
                >{
                  t('production.visual.cutout.principles.textures.title')
                }:</strong
              >
              {t('production.visual.cutout.principles.textures.description')}
