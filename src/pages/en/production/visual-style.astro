---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { useTranslations } from '@/i18n/config';

const lang = 'en';
const t = useTranslations(lang);
let basePath =
  import.meta.env.BASE_URL != null && import.meta.env.BASE_URL !== ''
    ? import.meta.env.BASE_URL
    : '/testigos-solarpunk';

// Ensure basePath doesn't end with a slash
if (basePath.endsWith('/')) {
  basePath = basePath.slice(0, -1);
}
---

<BaseLayout lang={lang} title={t('production.visual.title')}>
  <!-- Breadcrumb Navigation -->
  <nav class="breadcrumb-nav" aria-label="Breadcrumb navigation">
    <div class="container">
      <ol class="breadcrumb">
        <li>
          <a href={`${basePath}/en/`}
            >{t('production.visual.breadcrumb.home')}</a
          >
        </li>
        <li>
          <a href={`${basePath}/en/production/`}
            >{t('production.visual.breadcrumb.production')}</a
          >
        </li>
        <li aria-current="page">{t('production.visual.breadcrumb.current')}</li>
      </ol>
    </div>
  </nav>

  <section class="hero-section">
    <div class="container">
      <h1 class="text-gradient">
        <span class="emoji-cutout emoji-lg theme-solar">üé®</span>
        {t('production.visual.hero.title')}
      </h1>
      <p class="lead">
        {t('production.visual.hero.description')}
      </p>
    </div>
  </section>

  <!-- Color Palette -->
  <section class="color-palette-section">
    <div class="container">
      <h2>
        <span class="emoji-cutout emoji-md theme-purple">üåà</span>
        {t('production.visual.colors.title')}
      </h2>
      <div class="color-grid">
        <div class="color-card">
          <div class="color-swatch" style="background-color: #FFC107"></div>
          <h3>{t('production.visual.colors.solar.name')}</h3>
          <p class="color-code">#FFC107</p>
          <p class="color-usage">{t('production.visual.colors.solar.usage')}</p>
        </div>

        <div class="color-card">
