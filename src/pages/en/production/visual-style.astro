      </div>
    </div>
  </section>

  <!-- Design Tokens -->
  <section class="tokens-section">
    <div class="container">
      <h2>
        <span class="emoji-cutout emoji-md theme-purple">‚öôÔ∏è</span>
        {t('production.visual.tokens.title')}
      </h2>
      <div class="tokens-code card">
        <pre><code>/* {t('production.visual.tokens.main_colors')} */
--amarillo-solar: #FFC107;
--verde-sostenible: #4CAF50;
--purpura-creativo: #9C27B0;
--azul-tecnologico: #2196F3;
--naranja-comunidad: #FF5722;

/* {t('production.visual.tokens.spacing')} */
--espacio-xs: 0.25rem;
--espacio-sm: 0.5rem;
--espacio-md: 1rem;
--espacio-lg: 1.5rem;
--espacio-xl: 2rem;
--espacio-xxl: 3rem;

/* {t('production.visual.tokens.cutout')} */
