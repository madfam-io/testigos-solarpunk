<style>
  .resource-hero {
    padding: var(--espacio-xxl) 0;
    background: linear-gradient(
      135deg,
      var(--fondo-primario) 0%,
      var(--fondo-secundario) 100%
    );
    text-align: center;
  }

  .hero-content h1 {
    font-size: 2.5rem;
    margin: var(--espacio-lg) 0;
    color: var(--purpura-creativo);
  }

  .hero-description {
    font-size: 1.2rem;
    color: var(--texto-secundario);
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .templates-section,
  .guidelines-section {
    padding: var(--espacio-xxl) 0;
  }

  .guidelines-section {
    background-color: var(--fondo-secundario);
  }

  .templates-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--espacio-xl);
    margin-top: var(--espacio-xl);
  }

  .guidelines-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--espacio-lg);
    margin-top: var(--espacio-xl);
  }

  .template-card,
  .guideline-card {
    padding: var(--espacio-xl);
  }

  .template-header {
    display: flex;
    align-items: center;
    gap: var(--espacio-md);
    margin-bottom: var(--espacio-lg);
  }

  .template-header h2 {
    color: var(--verde-sostenible);
    margin: 0;
  }

  .template-content h3,
  .guideline-card h3 {
    color: var(--purpura-creativo);
    margin-bottom: var(--espacio-md);
    font-size: 1.1rem;
  }

  .template-content ul,
  .guideline-card ul {
    list-style: none;
    padding: 0;
    margin-bottom: var(--espacio-lg);
  }

  .template-content li,
  .guideline-card li {
    padding: var(--espacio-xs) 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
  }

  .template-content li:last-child,
  .guideline-card li:last-child {
    border-bottom: none;
  }

  .guidelines-section h2 {
    display: flex;
    align-items: center;
    gap: var(--espacio-md);
    justify-content: center;
    margin-bottom: var(--espacio-xl);
    color: var(--amarillo-solar);
  }

  .download-section {
    padding: var(--espacio-xxl) 0;
    text-align: center;
  }

  .download-section h2 {
    display: flex;
    align-items: center;
    gap: var(--espacio-md);
    justify-content: center;
    margin-bottom: var(--espacio-xl);
    color: var(--purpura-creativo);
  }

  .download-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--espacio-lg);
    margin-top: var(--espacio-xl);
  }

  .download-btn {
    display: flex;
    align-items: center;
    gap: var(--espacio-md);
    padding: var(--espacio-lg);
    text-decoration: none;
    color: inherit;
    transition: all 0.3s ease;
  }

  .download-btn:hover {
    transform: translateY(-4px);
    border-color: var(--purpura-creativo);
  }

  .download-btn h3 {
    margin: 0 0 var(--espacio-xs) 0;
    color: var(--purpura-creativo);
  }

  .download-btn p {
    margin: 0;
    color: var(--texto-secundario);
    font-size: 0.875rem;
  }

  .resource-navigation {
    padding: var(--espacio-xxl) 0;
    background-color: var(--fondo-secundario);
  }

  .nav-buttons {
    display: flex;
    justify-content: space-between;
    gap: var(--espacio-lg);
  }

  /* Mobile Responsiveness */
  @media (max-width: 768px) {
    .hero-content h1 {
      font-size: 2rem;
    }

    .templates-grid {
      grid-template-columns: 1fr;
    }

    .guidelines-grid {
      grid-template-columns: 1fr;
    }

    .download-grid {
      grid-template-columns: 1fr;
    }

    .nav-buttons {
      flex-direction: column;
      align-items: center;
    }

    .nav-buttons .btn {
      width: 100%;
      max-width: 300px;
    }
  }
</style>
