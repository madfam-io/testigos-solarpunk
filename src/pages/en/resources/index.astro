---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { useTranslations } from '@/i18n/config';

const lang = 'en';
const t = useTranslations(lang);
let basePath =
  import.meta.env.BASE_URL != null && import.meta.env.BASE_URL !== ''
    ? import.meta.env.BASE_URL
    : '/testigos-solarpunk';

// Ensure basePath doesn't end with a slash
if (basePath.endsWith('/')) {
  basePath = basePath.slice(0, -1);
}
---

<BaseLayout lang={lang} title={t('nav.resources')}>
  <section class="hero-section gradient-solarpunk">
    <div class="container">
      <h1 class="hero-title">{t('resources.hero.title')}</h1>
      <p class="hero-subtitle">
        {t('resources.hero.subtitle')}
      </p>
    </div>
  </section>

  <section class="resources-section">
    <div class="container">
      <div class="resource-categories">
        <div class="resource-category">
          <div class="category-header">
            <h2>
              <span class="emoji emoji-md emoji-card">üé¨</span>
              {t('resources.for.creators')}
            </h2>
            <p>
              {t('resources.creators.description')}
            </p>
          </div>
          <div class="resource-list">
            <a
              href={`${basePath}/en/resources/creadores/plantillas/`}
              class="resource-item"
            >
              <span class="emoji-cutout emoji-lg theme-purple resource-icon"
                >üìù</span
              >
              <div>
                <h3>{t('resources.script.templates')}</h3>
                <p>{t('resources.script.templates.desc')}</p>
              </div>
            </a>
            <a
              href={`${basePath}/en/resources/creadores/personajes/`}
              class="resource-item"
            >
              <span class="emoji-cutout emoji-lg theme-community resource-icon"
                >üë•</span
              >
              <div>
                <h3>{t('resources.character.sheets')}</h3>
                <p>{t('resources.character.sheets.desc')}</p>
              </div>
            </a>
            <a
              href={`${basePath}/en/resources/creadores/worldbuilding/`}
              class="resource-item"
            >
              <span class="emoji-cutout emoji-lg theme-green resource-icon"
                >üåç</span
              >
              <div>
                <h3>{t('resources.worldbuilding.guide')}</h3>
                <p>{t('resources.worldbuilding.guide.desc')}</p>
              </div>
            </a>
          </div>
        </div>

        <div class="resource-category">
          <div class="category-header">
            <h2>
              <span class="emoji emoji-md emoji-card">üé≠</span>
              {t('resources.for.actors')}
            </h2>
            <p>{t('resources.actors.description')}</p>
          </div>
          <div class="resource-list">
            <a
              href={`${basePath}/en/resources/actores/personajes/`}
              class="resource-item"
            >
              <span class="emoji-cutout emoji-lg theme-solar resource-icon"
                >üéØ</span
              >
              <div>
                <h3>{t('resources.character.analysis')}</h3>
                <p>{t('resources.character.analysis.desc')}</p>
              </div>
            </a>
            <a
              href={`${basePath}/en/resources/actores/dialogo/`}
              class="resource-item"
            >
              <span class="emoji-cutout emoji-lg theme-purple resource-icon"
                >üí¨</span
              >
              <div>
                <h3>{t('resources.dialogue.guides')}</h3>
                <p>{t('resources.dialogue.guides.desc')}</p>
              </div>
            </a>
            <a
              href={`${basePath}/en/resources/actores/movimiento/`}
              class="resource-item"
            >
              <span class="emoji-cutout emoji-lg theme-community resource-icon"
                >üö∂</span
              >
              <div>
                <h3>{t('resources.movement.references')}</h3>
                <p>{t('resources.movement.references.desc')}</p>
              </div>
            </a>
          </div>
        </div>

        <div class="resource-category" id="patrocinadores">
          <div class="category-header">
            <h2>
              <span class="emoji emoji-md emoji-card">üíº</span>
              {t('resources.for.sponsors')}
            </h2>
            <p>{t('resources.sponsors.description')}</p>
          </div>
          <div class="resource-list">
            <a
              href={`${basePath}/en/resources/patrocinadores/impacto/`}
              class="resource-item"
            >
              <span class="emoji-cutout emoji-lg theme-purple resource-icon"
                >üìä</span
              >
              <div>
                <h3>{t('resources.impact.report')}</h3>
                <p>{t('resources.impact.report.desc')}</p>
              </div>
            </a>
            <a
              href={`${basePath}/en/resources/patrocinadores/integracion/`}
              class="resource-item"
            >
              <span class="emoji-cutout emoji-lg theme-community resource-icon"
                >ü§ù</span
              >
              <div>
                <h3>{t('resources.integration.opportunities')}</h3>
                <p>{t('resources.integration.opportunities.desc')}</p>
              </div>
            </a>
            <a
              href={`${basePath}/en/resources/patrocinadores/valores/`}
              class="resource-item"
            >
              <span class="emoji-cutout emoji-lg theme-green resource-icon"
                >üå±</span
              >
              <div>
                <h3>{t('resources.values.alignment')}</h3>
                <p>{t('resources.values.alignment.desc')}</p>
              </div>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="philosophy-section" id="filosofia">
    <div class="container">
      <h2 class="text-center">{t('resources.philosophy.title')}</h2>
      <div class="philosophy-grid">
        <div class="philosophy-card">
          <h3>{t('philosophy.radical.optimism')}</h3>
          <p>
            {t('philosophy.radical.optimism.desc')}
          </p>
        </div>
        <div class="philosophy-card">
          <h3>{t('philosophy.local.action')}</h3>
          <p>
            {t('philosophy.local.action.desc')}
          </p>
        </div>
        <div class="philosophy-card">
          <h3>{t('philosophy.appropriate.tech')}</h3>
          <p>
            {t('philosophy.appropriate.tech.desc')}
          </p>
        </div>
        <div class="philosophy-card">
          <h3>{t('philosophy.regenerative.diversity')}</h3>
          <p>
            {t('philosophy.regenerative.diversity.desc')}
          </p>
        </div>
      </div>
    </div>
  </section>

  <section class="download-section">
    <div class="container text-center">
      <h2>{t('resources.downloads.title')}</h2>
      <p class="text-muted mb-4">{t('resources.downloads.subtitle')}</p>
      <div class="download-grid">
        <a
          href={`${basePath}/downloads/biblia-personajes.pdf`}
          class="download-card"
        >
          <span class="download-icon">üìö</span>
          <h3>{t('downloads.character.bible')}</h3>
          <p>PDF - 2.5 MB</p>
        </a>
        <a href={`${basePath}/downloads/guia-mundo.pdf`} class="download-card">
          <span class="download-icon">üó∫Ô∏è</span>
          <h3>{t('downloads.world.guide')}</h3>
          <p>PDF - 3.8 MB</p>
        </a>
        <a href={`${basePath}/downloads/kit-prensa.zip`} class="download-card">
          <span class="download-icon">üì∞</span>
          <h3>{t('downloads.press.kit')}</h3>
          <p>ZIP - 15 MB</p>
        </a>
        <a
          href={`${basePath}/downloads/assets-visuales.zip`}
          class="download-card"
        >
          <span class="download-icon">üé®</span>
          <h3>{t('downloads.visual.assets')}</h3>
          <p>ZIP - 45 MB</p>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .hero-section {
    padding: var(--espacio-xxl) 0;
    text-align: center;
    color: var(--text-primary, #ffffff);
  }

  .hero-title {
    font-size: 3rem;
    margin-bottom: var(--espacio-lg);
    color: var(--text-primary, #ffffff);
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
  }

  .hero-subtitle {
    font-size: 1.25rem;
    max-width: 700px;
    margin: 0 auto;
  }

  .resources-section {
    padding: var(--espacio-xxl) 0;
  }

  .resource-categories {
    display: flex;
    flex-direction: column;
    gap: var(--espacio-xxl);
  }

  .category-header h2 {
    color: var(--verde-sostenible);
    margin-bottom: var(--espacio-sm);
  }

  .category-header p {
    color: var(--texto-secundario);
    margin-bottom: var(--espacio-lg);
  }

  .resource-list {
    display: grid;
    gap: var(--espacio-md);
  }

  .resource-item {
    display: flex;
    gap: var(--espacio-lg);
    padding: var(--espacio-lg);
    background-color: var(--fondo-secundario);
    border-radius: 8px;
    text-decoration: none;
    color: inherit;
    transition: all var(--transicion-normal);
  }

  .resource-item:hover {
    transform: translateX(8px);
    box-shadow: 0 4px 12px var(--sombra-suave);
  }

  .resource-icon {
    font-size: 2.5rem;
    flex-shrink: 0;
  }

  .resource-item h3 {
    color: var(--azul-tecnologico);
    margin-bottom: var(--espacio-xs);
  }

  .resource-item p {
    color: var(--texto-secundario);
    margin: 0;
  }

  .philosophy-section {
    background-color: var(--fondo-secundario);
    padding: var(--espacio-xxl) 0;
  }

  .philosophy-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--espacio-lg);
    margin-top: var(--espacio-xl);
  }

  .philosophy-card {
    background-color: var(--bg-tertiary, #1c1c1f);
    color: var(--text-primary, #ffffff);
    padding: var(--espacio-lg);
    border-radius: 8px;
    text-align: center;
    border: 1px solid var(--border-subtle, rgba(255, 255, 255, 0.1));
  }

  .philosophy-card h3 {
    color: var(--text-primary, #ffffff);
    margin-bottom: var(--espacio-md);
  }

  .philosophy-card p {
    color: var(--text-secondary, rgba(255, 255, 255, 0.87));
  }

  .download-section {
    padding: var(--espacio-xxl) 0;
  }

  .download-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--espacio-lg);
    margin-top: var(--espacio-xl);
  }

  .download-card {
    background-color: var(--fondo-secundario);
    padding: var(--espacio-lg);
    border-radius: 8px;
    text-align: center;
    text-decoration: none;
    color: inherit;
    transition: all var(--transicion-normal);
  }

  .download-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 4px 12px var(--sombra-suave);
  }

  .download-icon {
    font-size: 3rem;
    display: block;
    margin-bottom: var(--espacio-md);
  }

  .download-card h3 {
    color: var(--verde-sostenible);
    margin-bottom: var(--espacio-sm);
  }

  .download-card p {
    color: var(--texto-secundario);
    margin: 0;
    font-size: 0.875rem;
  }

  @media (max-width: 768px) {
    .hero-title {
      font-size: 2rem;
    }

    .resource-item {
      flex-direction: column;
      text-align: center;
    }
  }
</style>
