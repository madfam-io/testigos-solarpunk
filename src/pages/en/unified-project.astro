---
import UnifiedLayout from '../../layouts/UnifiedLayout.astro';
import Breadcrumbs from '../../components/layout/Breadcrumbs.astro';
import { useTranslations } from '@/i18n/config';

const lang = 'en';
const t = useTranslations(lang);
let basePath =
  import.meta.env.BASE_URL != null && import.meta.env.BASE_URL !== ''
    ? import.meta.env.BASE_URL
    : '/testigos-solarpunk';

// Ensure basePath doesn't end with a slash
if (basePath.endsWith('/')) {
  basePath = basePath.slice(0, -1);
}

const breadcrumbItems = [
  { label: t('nav.home'), href: `${basePath}/en/` },
  { label: t('nav.project') },
];
---

<UnifiedLayout title={t('nav.project')} description={t('project.hero.title')}>
  <Breadcrumbs items={breadcrumbItems} />

  <section class="hero-proyecto">
    <div class="container">
      <h1 class="hero-title animate-fadeInUp">
        {t('project.hero.title')}
      </h1>
      <p class="tagline animate-fadeInUp">{t('project.hero.tagline')}</p>

      <h2 class="sr-only">{t('ui.mission.vision')}</h2>
      <div class="mision-vision">
        <div class="card mision-card animate-fadeInUp">
          <h3>
            <span class="emoji emoji-md emoji-card">üéØ</span>
            {t('project.mission.title')}
          </h3>
          <p>
            {t('project.mission.description')}
          </p>
        </div>
        <div class="card vision-card animate-fadeInUp">
          <h3>
            <span class="emoji emoji-md emoji-card">üåü</span>
            {t('project.vision.title')}
          </h3>
          <p>
            {t('project.vision.description')}
          </p>
        </div>
      </div>
    </div>
  </section>

  <section class="fases-section">
    <div class="container">
      <h2 class="section-title">{t('project.strategy.title')}</h2>
      <p class="section-intro text-secondary">
        {t('project.strategy.intro')}
      </p>

      <div class="fases-grid">
        <div class="card fase-card" data-fase="1">
          <span class="fase-number">01</span>
          <span class="fase-icon emoji emoji-xl emoji-card theme-solar">üé≠</span
          >
          <h3>{t('project.phase1.title')}</h3>
          <p class="fase-descripcion">
            {t('project.phase1.description')}
          </p>
          <div class="fase-meta">
            <span class="badge badge-success">{t('phase1.status')}</span>
            <span class="badge badge-secondary"
              >{t('project.phase1.duration')}</span
            >
          </div>
          <ul class="fase-features">
            <li>{t('project.phase1.feature1')}</li>
            <li>{t('project.phase1.feature2')}</li>
            <li>{t('project.phase1.feature3')}</li>
          </ul>
          <a href={`${basePath}/en/content/sketches`} class="btn btn-primary"
            >{t('cta.watch')}</a
          >
        </div>

        <div class="card fase-card" data-fase="2">
          <span class="fase-number">02</span>
          <span class="fase-icon emoji emoji-xl emoji-card theme-purple"
            >üéôÔ∏è</span
          >
          <h3>MADFAM Podcast</h3>
          <p class="fase-descripcion">
            {t('project.phase2.description')}
          </p>
          <div class="fase-meta">
            <span class="badge badge-primary">{t('phase2.status')}</span>
            <span class="badge badge-secondary"
              >{t('project.phase2.duration')}</span
            >
          </div>
          <ul class="fase-features">
            <li>{t('project.phase2.feature1')}</li>
            <li>{t('project.phase2.feature2')}</li>
            <li>{t('project.phase2.feature3')}</li>
          </ul>
          <a href={`${basePath}/en/content/podcast`} class="btn btn-secondary"
            >{t('cta.learn')}</a
          >
        </div>

        <div class="card fase-card" data-fase="3">
          <span class="fase-number">03</span>
          <span class="fase-icon emoji emoji-xl emoji-card theme-green">üî¨</span
          >
          <h3>{t('project.phase3.title')}</h3>
          <p class="fase-descripcion">
            {t('project.phase3.description')}
          </p>
          <div class="fase-meta">
            <span class="badge badge-warning">{t('phase3.status')}</span>
            <span class="badge badge-secondary"
              >{t('project.phase3.duration')}</span
            >
          </div>
          <ul class="fase-features">
            <li>{t('project.phase3.feature1')}</li>
            <li>{t('project.phase3.feature2')}</li>
            <li>{t('project.phase3.feature3')}</li>
          </ul>
          <a href={`${basePath}/en/content/madlab`} class="btn btn-secondary"
            >{t('cta.discover')}</a
          >
        </div>
      </div>
    </div>
  </section>

  <section class="proceso-section">
    <div class="container">
      <h2>{t('project.process.title')}</h2>
      <div class="proceso-timeline">
        <div class="proceso-step">
          <div class="step-number">1</div>
          <h3>{t('process.research.title')}</h3>
          <p class="text-secondary">
            {t('process.research.description')}
          </p>
        </div>
        <div class="proceso-step">
          <div class="step-number">2</div>
          <h3>{t('process.design.title')}</h3>
          <p class="text-secondary">{t('process.design.description')}</p>
        </div>
        <div class="proceso-step">
          <div class="step-number">3</div>
          <h3>{t('process.production.title')}</h3>
          <p class="text-secondary">{t('process.production.description')}</p>
        </div>
        <div class="proceso-step">
          <div class="step-number">4</div>
          <h3>{t('process.distribution.title')}</h3>
          <p class="text-secondary">
            {t('process.distribution.description')}
          </p>
        </div>
        <div class="proceso-step">
          <div class="step-number">5</div>
          <h3>{t('process.impact.title')}</h3>
          <p class="text-secondary">{t('process.impact.description')}</p>
        </div>
      </div>
    </div>
  </section>

  <section class="cta-proyecto">
    <div class="container text-center">
      <h2>{t('project.cta.title')}</h2>
      <p class="cta-subtitle text-secondary">
        {t('project.cta.subtitle')}
      </p>
      <div class="cta-actions">
        <a href={`${basePath}/en/community`} class="btn btn-primary">
          <span class="emoji emoji-button">ü§ù</span>{t('cta.connect')}</a
        >
        <a href={`${basePath}/en/content/sketches`} class="btn btn-secondary">
          <span class="emoji emoji-button">üé¨</span>{t('cta.watch')}</a
        >
      </div>
    </div>
  </section>
</UnifiedLayout>

<style>
  .hero-proyecto {
    padding: var(--space-xxl) 0;
    background: linear-gradient(
      135deg,
      var(--madfam-yellow-dark) 0%,
      var(--madfam-green-dark) 100%
    );
    color: var(--text-primary, #ffffff);
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .hero-proyecto::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(
      circle at center,
      rgba(255, 255, 255, 0.1) 0%,
      transparent 70%
    );
    opacity: 0.3;
    transform: rotate(45deg);
  }

  .hero-title {
    font-size: 3rem;
    font-weight: 900;
    margin-bottom: var(--space-md);
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
    position: relative;
    z-index: 1;
  }

  .tagline {
    font-size: 1.5rem;
    font-weight: 300;
    margin-bottom: var(--space-xl);
    opacity: 0.9;
    position: relative;
    z-index: 1;
  }

  .mision-vision {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--space-xl);
    margin-top: var(--space-xl);
    max-width: 900px;
    margin-left: auto;
    margin-right: auto;
    position: relative;
    z-index: 1;
  }

  .mision-card,
  .vision-card {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .mision-card h3,
  .vision-card h3 {
    color: var(--text-primary, #ffffff);
  }

  .mision-card p,
  .vision-card p {
    color: rgba(255, 255, 255, 0.9);
  }

  /* Secci√≥n de Fases */
  .fases-section {
    padding: var(--space-xxl) 0;
    background-color: var(--bg-secondary);
  }

  .section-title {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: var(--space-md);
    color: var(--text-primary);
  }

  .section-intro {
    text-align: center;
    font-size: 1.2rem;
    margin-bottom: var(--space-xl);
  }

  .fases-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: var(--space-xl);
    margin-top: var(--space-xl);
  }

  .fase-card {
    position: relative;
    overflow: hidden;
  }

  .fase-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: var(--madfam-yellow-dark);
  }

  .fase-card[data-fase='1']::before {
    background: var(--madfam-yellow-dark);
  }

  .fase-card[data-fase='2']::before {
    background: var(--madfam-purple-dark);
  }

  .fase-card[data-fase='3']::before {
    background: var(--madfam-green-dark);
  }

  .fase-number {
    position: absolute;
    top: var(--space-md);
    right: var(--space-md);
    font-size: 3rem;
    font-weight: 900;
    opacity: 0.1;
    color: var(--text-primary);
  }

  .fase-icon {
    font-size: 3rem;
    display: block;
    margin-bottom: var(--space-md);
  }

  .fase-card h3 {
    margin-bottom: var(--space-sm);
    color: var(--text-primary);
  }

  .fase-descripcion {
    color: var(--text-secondary);
    margin-bottom: var(--space-md);
  }

  .fase-meta {
    display: flex;
    gap: var(--space-md);
    margin-bottom: var(--space-md);
  }

  .fase-features {
    list-style: none;
    padding: 0;
    margin-bottom: var(--space-lg);
  }

  .fase-features li {
    padding: var(--space-sm) 0;
    border-bottom: 1px solid var(--border-subtle);
    color: var(--text-secondary);
  }

  .fase-features li:last-child {
    border-bottom: none;
  }

  .fase-features li::before {
    content: '‚úì';
    color: var(--madfam-green-dark);
    font-weight: bold;
    margin-right: var(--space-sm);
  }

  /* Proceso Timeline */
  .proceso-section {
    padding: var(--space-xxl) 0;
  }

  .proceso-timeline {
    display: flex;
    justify-content: space-between;
    position: relative;
    margin-top: var(--space-xl);
    padding: 0 var(--space-md);
  }

  .proceso-timeline::before {
    content: '';
    position: absolute;
    top: 30px;
    left: 10%;
    right: 10%;
    height: 2px;
    background: linear-gradient(
      to right,
      var(--madfam-yellow-dark),
      var(--madfam-green-dark)
    );
    z-index: 0;
  }

  .proceso-step {
    text-align: center;
    position: relative;
    z-index: 1;
    flex: 1;
  }

  .step-number {
    width: 60px;
    height: 60px;
    background: var(--bg-primary);
    border: 3px solid var(--madfam-yellow-dark);
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto var(--space-md);
    font-weight: bold;
    font-size: 1.5rem;
    color: var(--madfam-yellow-dark);

    /* DIY Magazine Cutout aesthetic for process steps */
    clip-path: polygon(
      12% 0%,
      88% 2%,
      96% 18%,
      100% 42%,
      98% 65%,
      100% 88%,
      82% 98%,
      58% 100%,
      35% 95%,
      12% 100%,
      0% 75%,
      4% 45%,
      0% 22%,
      18% 4%
    );
  }

  .proceso-step h3 {
    margin-bottom: var(--space-sm);
  }

  /* CTA Section */
  .cta-proyecto {
    padding: var(--space-xxl) 0;
    background: linear-gradient(
      135deg,
      var(--bg-primary) 0%,
      rgba(255, 193, 7, 0.05) 100%
    );
  }

  .cta-subtitle {
    font-size: 1.2rem;
    margin-bottom: var(--space-xl);
  }

  .cta-actions {
    display: flex;
    gap: var(--space-md);
    justify-content: center;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .hero-title {
      font-size: 2rem;
    }

    .proceso-timeline {
      flex-direction: column;
      gap: var(--space-xl);
    }

    .proceso-timeline::before {
      display: none;
    }

    .cta-actions {
      flex-direction: column;
      align-items: center;
    }
  }
</style>
