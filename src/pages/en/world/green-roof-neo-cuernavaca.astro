<style>
  .breadcrumb-nav {
    background-color: var(--fondo-secundario);
    padding: var(--espacio-md) 0;
    border-bottom: 1px solid var(--borde-claro);
  }

  .breadcrumb {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
    font-size: 0.875rem;
  }

  .breadcrumb li {
    color: var(--texto-secundario);
  }

  .breadcrumb li:not(:last-child)::after {
    content: ' / ';
    margin: 0 var(--espacio-sm);
    color: var(--texto-terciario);
  }

  .breadcrumb a {
    color: var(--azul-tecnologico);
    text-decoration: none;
  }

  .breadcrumb a:hover {
    text-decoration: underline;
  }

  .location-hero {
    padding: var(--espacio-xxl) 0;
    background: linear-gradient(
      135deg,
      var(--verde-sostenible) 0%,
      rgba(76, 175, 80, 0.1) 100%
    );
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .location-hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: repeating-linear-gradient(
      45deg,
      transparent,
      transparent 10px,
      rgba(255, 255, 255, 0.05) 10px,
      rgba(255, 255, 255, 0.05) 20px
    );
    pointer-events: none;
  }

  .hero-content h1 {
    font-size: 2.5rem;
    margin: var(--espacio-lg) 0;
    color: var(--texto-primario);
  }

  .hero-description {
    font-size: 1.2rem;
    color: var(--texto-secundario);
    max-width: 700px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .overview-section {
    padding: var(--espacio-xxl) 0;
  }

  .overview-content {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: var(--espacio-xxl);
    align-items: start;
  }

  .overview-text h2 {
    display: flex;
    align-items: center;
    gap: var(--espacio-md);
    margin-bottom: var(--espacio-lg);
    color: var(--amarillo-solar);
  }

  .overview-text p {
    color: var(--texto-secundario);
    line-height: 1.6;
    margin-bottom: var(--espacio-lg);
  }

  .overview-stats {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--espacio-md);
  }

  .stat-card {
    background: var(--fondo-secundario);
    padding: var(--espacio-lg);
    border-radius: 8px;
    text-align: center;
    border: 2px solid var(--borde-claro);
  }

  .stat-number {
    display: block;
    font-size: 1.8rem;
    font-weight: 700;
    color: var(--verde-sostenible);
    margin-bottom: var(--espacio-xs);
  }

  .stat-label {
    color: var(--texto-secundario);
    font-size: 0.9rem;
  }

  .features-section {
    padding: var(--espacio-xxl) 0;
    background-color: var(--fondo-secundario);
  }

  .features-section h2 {
    display: flex;
    align-items: center;
    gap: var(--espacio-md);
    justify-content: center;
    margin-bottom: var(--espacio-xl);
    color: var(--amarillo-solar);
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: var(--espacio-lg);
    margin-top: var(--espacio-xl);
  }

  .feature-card {
    padding: var(--espacio-xl);
  }

  .feature-header {
    display: flex;
    align-items: center;
    gap: var(--espacio-md);
    margin-bottom: var(--espacio-lg);
    padding-bottom: var(--espacio-md);
    border-bottom: 2px solid var(--borde-claro);
  }

  .feature-header h3 {
    color: var(--verde-sostenible);
    margin: 0;
    font-size: 1.2rem;
  }

  .feature-content p {
    color: var(--texto-secundario);
    margin-bottom: var(--espacio-lg);
    line-height: 1.6;
  }

  .feature-content ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .feature-content li {
    padding: var(--espacio-xs) 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    color: var(--texto-secundario);
    position: relative;
    padding-left: var(--espacio-lg);
  }

  .feature-content li:before {
    content: '‚úì';
    position: absolute;
    left: 0;
