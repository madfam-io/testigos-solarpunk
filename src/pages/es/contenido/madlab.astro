<style>
  .hero-madlab {
    background: linear-gradient(
      135deg,
      var(--verde-sostenible) 0%,
      rgba(76, 175, 80, 0.2) 100%
    );
    padding: var(--espacio-xxl) 0;
    text-align: center;
    color: var(--text-on-accent, #000000);
    position: relative;
    overflow: hidden;
  }

  .hero-madlab::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(
      circle,
      rgba(255, 255, 255, 0.1) 0%,
      transparent 70%
    );
    animation: pulse 4s ease-in-out infinite;
  }

  @keyframes pulse {
    0%,
    100% {
      transform: scale(1);
      opacity: 0.5;
    }
    50% {
      transform: scale(1.1);
      opacity: 0.3;
    }
  }

  .fase-label {
    background: rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(10px);
    padding: 8px 20px;
    border-radius: 20px;
    font-weight: 500;
    display: inline-block;
    margin-bottom: var(--espacio-md);
    position: relative;
    z-index: 1;
  }

  .hero-madlab h1 {
    font-size: 3.5rem;
    font-weight: 900;
    margin-bottom: var(--espacio-md);
    position: relative;
    z-index: 1;
  }

  .hero-description {
    font-size: 1.2rem;
    max-width: 700px;
    margin: 0 auto var(--espacio-xl);
    opacity: 0.9;
    position: relative;
    z-index: 1;
  }

  .madlab-preview {
    margin-top: var(--espacio-xl);
    position: relative;
    z-index: 1;
  }

  .preview-stats {
    display: flex;
    justify-content: center;
    gap: var(--espacio-xxl);
  }

  .stat {
    text-align: center;
  }

  .stat-icon {
    font-size: 2.5rem;
    display: block;
    margin-bottom: var(--espacio-sm);
  }

  .stat-value {
    font-size: 2.5rem;
    font-weight: 900;
    display: block;
  }

  .stat-label {
    font-size: 0.9rem;
    opacity: 0.8;
  }

  /* Concept Section */
  .madlab-concept {
    padding: var(--espacio-xxl) 0;
    background: var(--fondo-secundario);
  }

  .madlab-concept h2 {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: var(--espacio-xl);
  }

  .concept-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--espacio-xxl);
    align-items: center;
  }

  .lead {
    font-size: 1.2rem;
    color: var(--verde-sostenible);
    margin-bottom: var(--espacio-lg);
  }

  .concept-list {
    list-style: none;
    padding: 0;
    margin-top: var(--espacio-lg);
  }

  .concept-list li {
    padding: var(--espacio-sm) 0;
    padding-left: 30px;
    position: relative;
  }

  .concept-list li::before {
    content: '‚Üí';
    position: absolute;
    left: 0;
    color: var(--verde-sostenible);
    font-weight: bold;
  }

  .visual-placeholder {
    background: linear-gradient(
      135deg,
      var(--verde-sostenible) 0%,
      var(--verde-brillante) 100%
    );
    aspect-ratio: 1;
    border-radius: 50%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: var(--text-on-accent, #000000);
    max-width: 400px;
    margin: 0 auto;
  }

  .visual-icon {
    font-size: 6rem;
    margin-bottom: var(--espacio-md);
  }

  /* Programs */
  .madlab-programs {
    padding: var(--espacio-xxl) 0;
  }

  .madlab-programs h2 {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: var(--espacio-xl);
  }

  .programs-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--espacio-xl);
  }

  .program-card {
    background: var(--bg-secondary, #1a1a1b);
    color: var(--text-primary, #ffffff);
    padding: var(--espacio-xl);
    border-radius: 16px;
    border: 1px solid var(--border-subtle, rgba(255, 255, 255, 0.1));
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
    transition: all 0.3s ease;
    border-top: 4px solid var(--verde-sostenible);
  }

  .program-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.4);
  }

  .program-header {
    display: flex;
    align-items: center;
    gap: var(--espacio-md);
    margin-bottom: var(--espacio-md);
  }

  .program-icon {
    font-size: 2.5rem;
  }

  .program-header h3 {
    color: var(--verde-sostenible);
  }

  .program-features {
    list-style: none;
    padding: 0;
    margin-top: var(--espacio-md);
    border-top: 1px solid var(--borde-claro);
    padding-top: var(--espacio-md);
  }

  .program-features li {
    padding: var(--espacio-xs) 0;
    color: var(--texto-secundario);
    font-size: 0.9rem;
  }

  /* Impact Timeline */
  .madlab-impact {
    padding: var(--espacio-xxl) 0;
    background: var(--fondo-secundario);
  }

  .madlab-impact h2 {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: var(--espacio-xl);
  }

  .impact-timeline {
    display: flex;
    justify-content: space-between;
    max-width: 1000px;
    margin: 0 auto;
    position: relative;
  }

  .impact-timeline::before {
    content: '';
    position: absolute;
    top: 30px;
    left: 5%;
    right: 5%;
    height: 2px;
    background: linear-gradient(
      to right,
      var(--verde-sostenible),
      var(--verde-brillante)
    );
  }

  .timeline-item {
    text-align: center;
    position: relative;
    flex: 1;
  }

  .timeline-marker {
    width: 60px;
    height: 60px;
    background: var(--bg-secondary, #1a1a1b);
    border: 3px solid var(--verde-sostenible);
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto var(--espacio-md);
    font-weight: bold;
    font-size: 1.5rem;
    color: var(--verde-sostenible);
    position: relative;
    z-index: 1;

    /* DIY Magazine Cutout aesthetic for MADLAB timeline */
    clip-path: polygon(
      14% 0%,
      86% 4%,
      96% 18%,
      100% 40%,
      98% 64%,
      100% 86%,
      84% 96%,
      62% 100%,
      38% 98%,
      16% 94%,
      0% 78%,
      2% 55%,
      0% 32%,
      16% 8%
    );
  }

  .timeline-item h3 {
    color: var(--verde-sostenible);
    margin-bottom: var(--espacio-sm);
  }

  /* Sponsors */
  .madlab-sponsors {
    padding: var(--espacio-xxl) 0;
  }

  .madlab-sponsors h2 {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: var(--espacio-md);
  }

  .sponsors-intro {
    text-align: center;
    font-size: 1.2rem;
    color: var(--texto-secundario);
    margin-bottom: var(--espacio-xxl);
  }

  .sponsors-benefits {
    background: var(--fondo-secundario);
    padding: var(--espacio-xl);
    border-radius: 16px;
    margin-bottom: var(--espacio-xl);
  }

  .sponsors-benefits h3 {
    text-align: center;
    margin-bottom: var(--espacio-xl);
    color: var(--verde-sostenible);
  }

  .benefits-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--espacio-lg);
  }

  .benefit-item {
    text-align: center;
  }

  .benefit-icon {
    font-size: 2.5rem;
    display: block;
    margin-bottom: var(--espacio-sm);
  }

  .benefit-item h3 {
    margin-bottom: var(--espacio-xs);
  }

  .sponsor-cta {
    text-align: center;
  }

  /* CTA Section */
  .madlab-cta {
    padding: var(--espacio-xxl) 0;
    background: linear-gradient(
      135deg,
      var(--fondo-primario) 0%,
      rgba(76, 175, 80, 0.05) 100%
    );
  }

  .cta-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--espacio-xl);
    max-width: 800px;
    margin: 0 auto;
  }

  .cta-card {
    background: var(--bg-secondary, #1a1a1b);
    color: var(--text-primary, #ffffff);
    padding: var(--espacio-xl);
    border-radius: 16px;
    text-align: center;
    border: 1px solid var(--border-subtle, rgba(255, 255, 255, 0.1));
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
  }

  .cta-card h3 {
    color: var(--verde-sostenible);
    margin-bottom: var(--espacio-md);
  }

  .cta-card p {
    color: var(--text-secondary, #cccccc);
    margin-bottom: var(--espacio-lg);
  }

  @media (max-width: 768px) {
    .hero-madlab h1 {
      font-size: 2.5rem;
    }

    .preview-stats {
      flex-direction: column;
      gap: var(--espacio-lg);
    }

    .concept-grid {
      grid-template-columns: 1fr;
      gap: var(--espacio-xl);
    }

    .impact-timeline {
      flex-direction: column;
      gap: var(--espacio-xl);
    }

    .impact-timeline::before {
      display: none;
    }
  }
</style>
