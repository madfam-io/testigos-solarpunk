<style>
  .hero-proyecto {
    padding: var(--espacio-xxl) 0;
    background: linear-gradient(
      135deg,
      var(--amarillo-solar) 0%,
      var(--verde-sostenible) 100%
    );
    color: var(--text-primary);
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  /* Ensure readable text on gradient in both themes */
  :global([data-theme='light']) .hero-proyecto {
    color: #000000;
  }

  /* Dark mode - both direct selection and auto theme with dark preference */
  :global([data-theme='dark']) .hero-proyecto,
  :global([data-theme-selection='auto'][data-theme='dark']) .hero-proyecto {
    /* Use dark text on the yellow-green gradient for better contrast */
    color: #000000 !important;
    text-shadow: 0 1px 2px rgba(255, 255, 255, 0.3);
  }

  /* Make sure all text elements inherit the color with high specificity */
  .hero-proyecto h1,
  .hero-proyecto p,
  .hero-proyecto .hero-title,
  .hero-proyecto .tagline {
    color: inherit !important;
  }

  /* Extra specificity for dark mode to override theme variables */
  :global([data-theme='dark']) .hero-proyecto h1,
  :global([data-theme='dark']) .hero-proyecto p,
  :global([data-theme='dark']) .hero-proyecto .hero-title,
  :global([data-theme='dark']) .hero-proyecto .tagline,
  :global([data-theme-selection='auto'][data-theme='dark']) .hero-proyecto h1,
  :global([data-theme-selection='auto'][data-theme='dark']) .hero-proyecto p,
  :global([data-theme-selection='auto'][data-theme='dark'])
    .hero-proyecto
    .hero-title,
  :global([data-theme-selection='auto'][data-theme='dark'])
    .hero-proyecto
    .tagline {
    color: #000000 !important;
  }

  .hero-proyecto::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(
      circle at center,
      rgba(255, 255, 255, 0.1) 0%,
      transparent 70%
    );
    opacity: 0.3;
    transform: rotate(45deg);
  }

  .hero-title {
    font-size: 3rem;
    font-weight: 900;
    margin-bottom: var(--espacio-md);
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
  }

  .tagline {
    font-size: 1.5rem;
    font-weight: 300;
    margin-bottom: var(--espacio-xl);
    opacity: 0.9;
  }

  .mision-vision {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--espacio-xl);
    margin-top: var(--espacio-xl);
    max-width: 900px;
    margin-left: auto;
    margin-right: auto;
  }

  /* Secci√≥n de Fases */
  .fases-section {
    padding: var(--espacio-xxl) 0;
    background-color: var(--fondo-secundario);
  }

  .section-title {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: var(--espacio-md);
    color: var(--texto-primario);
  }

  .section-intro {
    text-align: center;
    font-size: 1.2rem;
    color: var(--texto-secundario);
    margin-bottom: var(--espacio-xl);
  }

  .fases-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: var(--espacio-xl);
    margin-top: var(--espacio-xl);
  }

  .fase-number {
    position: absolute;
    top: var(--espacio-md);
    right: var(--espacio-md);
    font-size: 3rem;
    font-weight: 900;
    opacity: 0.1;
    color: var(--texto-primario);
  }

  .fase-icon {
    font-size: 3rem;
    display: block;
    margin-bottom: var(--espacio-md);
  }

  .fase-descripcion {
    color: var(--texto-secundario);
    margin-bottom: var(--espacio-md);
  }

  .fase-meta {
    display: flex;
    gap: var(--espacio-md);
    margin-bottom: var(--espacio-md);
  }

  .status {
    padding: 4px 12px;
    border-radius: 20px;
    font-size: 0.875rem;
    font-weight: 500;
  }

  .status.active {
    background: var(--verde-sostenible);
    color: var(--text-on-success, #000000);
  }

  .status.upcoming {
    background: var(--azul-tecnologico);
    color: var(--text-on-info, #000000);
  }

  .status.development {
    background: var(--naranja-comunidad);
    color: var(--text-on-warning, #000000);
  }

  .formato {
    padding: 4px 12px;
    background: var(--fondo-secundario);
    border-radius: 20px;
    font-size: 0.875rem;
  }

  .fase-features {
    list-style: none;
    padding: 0;
    margin-bottom: var(--espacio-lg);
  }

  .fase-features li {
    padding: var(--espacio-sm) 0;
    border-bottom: 1px solid var(--borde-claro);
  }

  .fase-features li:last-child {
    border-bottom: none;
  }

  .fase-features li::before {
    content: '‚úì';
    color: var(--verde-sostenible);
    font-weight: bold;
    margin-right: var(--espacio-sm);
  }

  /* Proceso Timeline */
  .proceso-section {
    padding: var(--espacio-xxl) 0;
  }

  .proceso-timeline {
    display: flex;
    justify-content: space-between;
    position: relative;
    margin-top: var(--espacio-xl);
    padding: 0 var(--espacio-md);
  }

  .proceso-timeline::before {
    content: '';
    position: absolute;
    top: 30px;
    left: 10%;
    right: 10%;
    height: 2px;
    background: linear-gradient(
      to right,
      var(--amarillo-solar),
      var(--verde-sostenible)
    );
    z-index: 0;
  }

  .proceso-step {
    text-align: center;
    position: relative;
    z-index: 1;
    flex: 1;
  }

  .step-number {
    width: 60px;
    height: 60px;
    background: var(--bg-primary, #0a0a0b);
    border: 3px solid var(--amarillo-solar);
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto var(--espacio-md);
    font-weight: bold;
    font-size: 1.5rem;
    color: var(--amarillo-solar);
    /* Magazine cutout badge style */
    clip-path: polygon(
      20% 0%,
      80% 0%,
      100% 20%,
      100% 80%,
      80% 100%,
      20% 100%,
      0% 80%,
      0% 20%
    );
    transform: rotate(-5deg);
    box-shadow:
      inset 0 0 0 3px var(--amarillo-solar),
      3px 3px 5px rgba(0, 0, 0, 0.3);
    transition: transform 0.3s ease;
  }

  .proceso-step:hover .step-number {
    transform: rotate(3deg) scale(1.1);
  }

  .proceso-step h3 {
    margin-bottom: var(--espacio-sm);
  }

  .proceso-step p {
    font-size: 0.9rem;
    color: var(--texto-secundario);
  }

  /* CTA Section */
  .cta-proyecto {
    padding: var(--espacio-xxl) 0;
    background: linear-gradient(
      135deg,
      var(--fondo-primario) 0%,
      rgba(255, 193, 7, 0.05) 100%
    );
  }

  .cta-subtitle {
    font-size: 1.2rem;
    color: var(--texto-secundario);
    margin-bottom: var(--espacio-xl);
  }

  .cta-actions {
    display: flex;
    gap: var(--espacio-md);
    justify-content: center;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .hero-title {
      font-size: 2rem;
    }

    .proceso-timeline {
      flex-direction: column;
      gap: var(--espacio-xl);
    }

    .proceso-timeline::before {
      display: none;
    }

    .cta-actions {
      flex-direction: column;
      align-items: center;
    }
  }
</style>
