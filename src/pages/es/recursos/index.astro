<style>
  .hero-section {
    padding: var(--espacio-xxl) 0;
    text-align: center;
    color: var(--text-primary, #ffffff);
  }

  .hero-title {
    font-size: 3rem;
    margin-bottom: var(--espacio-lg);
    color: var(--text-primary, #ffffff);
    text-shadow: 2px 2px 4px var(--cutout-shadow-dark);
  }

  .hero-subtitle {
    font-size: 1.25rem;
    max-width: 700px;
    margin: 0 auto;
  }

  .resources-section {
    padding: var(--espacio-xxl) 0;
  }

  .resource-categories {
    display: flex;
    flex-direction: column;
    gap: var(--espacio-xxl);
  }

  .category-header h2 {
    color: var(--verde-sostenible);
    margin-bottom: var(--espacio-sm);
  }

  .category-header p {
    color: var(--texto-secundario);
    margin-bottom: var(--espacio-lg);
  }

  .resource-list {
    display: grid;
    gap: var(--espacio-md);
  }

  .resource-item {
    display: flex;
    gap: var(--espacio-lg);
    padding: var(--espacio-lg);
    background-color: var(--fondo-secundario);
    border-radius: 8px;
    text-decoration: none;
    color: inherit;
    transition: all var(--transicion-normal);
  }

  .resource-item:hover {
    transform: translateX(8px);
    box-shadow: 0 4px 12px var(--sombra-suave);
  }

  .resource-icon {
    font-size: 2.5rem;
    flex-shrink: 0;
  }

  .resource-item h3 {
    color: var(--azul-tecnologico);
    margin-bottom: var(--espacio-xs);
  }

  .resource-item p {
    color: var(--texto-secundario);
    margin: 0;
  }

  .philosophy-section {
    background-color: var(--fondo-secundario);
    padding: var(--espacio-xxl) 0;
  }

  .philosophy-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--espacio-lg);
    margin-top: var(--espacio-xl);
  }

  .philosophy-card {
    background-color: var(--bg-tertiary, #1c1c1f);
    color: var(--text-primary, #ffffff);
    padding: var(--espacio-lg);
    border-radius: 8px;
    text-align: center;
    border: 1px solid var(--border-subtle, rgba(255, 255, 255, 0.1));
  }

  .philosophy-card h3 {
    color: var(--text-primary, #ffffff);
    margin-bottom: var(--espacio-md);
  }

  .philosophy-card p {
    color: var(--text-secondary, rgba(255, 255, 255, 0.87));
  }

  .download-section {
    padding: var(--espacio-xxl) 0;
  }

  .download-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--espacio-lg);
    margin-top: var(--espacio-xl);
  }

  .download-card {
    background-color: var(--fondo-secundario);
    padding: var(--espacio-lg);
    border-radius: 8px;
    text-align: center;
    text-decoration: none;
    color: inherit;
    transition: all var(--transicion-normal);
  }

  .download-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 4px 12px var(--sombra-suave);
  }

  .download-icon {
    font-size: 3rem;
    display: block;
    margin-bottom: var(--espacio-md);
  }

  .download-card h3 {
    color: var(--verde-sostenible);
    margin-bottom: var(--espacio-sm);
  }

  .download-card p {
    color: var(--texto-secundario);
    margin: 0;
    font-size: 0.875rem;
  }

  @media (max-width: 768px) {
    .hero-title {
      font-size: 2rem;
    }

    .resource-item {
      flex-direction: column;
      text-align: center;
    }
  }
</style>
