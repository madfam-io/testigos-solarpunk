const currentStructure = siteStructure[currentLang] ?? siteStructure.es;
---

<BaseLayout
  title={currentLang === 'en' ? 'Site Map' : 'Mapa del Sitio'}
  description={currentLang === 'en'
    ? 'Complete navigation of the Solarpunk Witnesses universe - all available sections and pages'
    : 'Navegaci√≥n completa del universo Testigos de Solarpunk - todas las secciones y p√°ginas disponibles'}
>
  <!-- Skip to content for better accessibility -->
  <a href="#sitemap-main" class="skip-link">
    {
      currentLang === 'en'
        ? 'Skip to map content'
        : 'Saltar al contenido del mapa'
    }
  </a>

  <section class="sitemap-hero">
    <div class="container">
      <h1>
        <span class="emoji-cutout emoji-hero emoji-xl theme-solar flutter"
          >üó∫Ô∏è</span
        >
        {currentLang === 'en' ? 'Site Map' : 'Mapa del Sitio'}
      </h1>
      <p class="hero-description">
        {
          currentLang === 'en'
            ? 'Explore the entire universe of the Solarpunk Witnesses. From viral sketches to educational experiences, here you will find every corner of our narrative world.'
