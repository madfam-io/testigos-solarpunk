---
/**
 * Root Index Redirect - Testigos de Solarpunk
 * Intelligent language detection and redirect to appropriate locale
 *
 * @page RootRedirect
 * @description Redirects users to their preferred language version
 * @author MADFAM
 * @version 0.3.0+i18n
 */

import BaseLayout from '../layouts/BaseLayout.astro';

export const prerender = true;

// Detect deployment environment and set base path accordingly
let basePath =
  import.meta.env.BASE_URL !== undefined && import.meta.env.BASE_URL !== ''
    ? import.meta.env.BASE_URL
    : '/';

// Remove trailing slash for consistency
if (basePath.endsWith('/') && basePath !== '/') {
  basePath = basePath.slice(0, -1);
}

// Fallback for GitHub Pages if BASE_URL is not properly set
if (
  basePath === '/' &&
  typeof window !== 'undefined' &&
  window.location.hostname.includes('github.io')
) {
  basePath = '/testigos-solarpunk';
}

// Server-side language detection logic would go here
// For now, we redirect to the default language (Spanish)
// const redirectUrl = `${basePath}/${defaultLang}/`;
---

<BaseLayout title="Redirecting to language preference...">
  <!-- Language Detection and Redirect -->
  <main class="redirect-container">
    <div class="container text-center">
      <div class="redirect-content">
        <picture>
          <source
            srcset={basePath === '/'
              ? '/images/logo.webp'
              : `${basePath}/images/logo.webp`}
            type="image/webp"
          />
          <img
            src={basePath === '/'
              ? '/images/logo.png'
              : `${basePath}/images/logo.png`}
            alt="Testigos de Solarpunk"
            class="redirect-logo"
            loading="eager"
            width="120"
            height="120"
          />
        </picture>

        <h1>Welcome to Testigos de Solarpunk</h1>
        <p>Redirecting to your language preference...</p>

        <!-- Manual language selection as fallback -->
        <div class="language-choice">
          <a
            href={basePath === '/' ? '/es/' : `${basePath}/es/`}
            class="btn btn-primary"
          >
            <span class="emoji-cutout emoji-button emoji-md theme-solar"
              >ðŸ‡²ðŸ‡½</span
            >
            EspaÃ±ol
          </a>
          <a
            href={basePath === '/' ? '/en/' : `${basePath}/en/`}
            class="btn btn-secondary"
          >
            <span class="emoji-cutout emoji-button emoji-md theme-solar"
              >ðŸ‡ºðŸ‡¸</span
            >
            English
          </a>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>

<script>
  // Client-side language detection and redirect
  document.addEventListener('DOMContentLoaded', () => {
    // Get browser language preference
    const browserLang = navigator.language || navigator.languages?.[0] || 'es';
    const langCode = browserLang.startsWith('en') ? 'en' : 'es';

    // Detect deployment environment and set base path
    let basePath = '/';
    if (window.location.hostname.includes('github.io')) {
      basePath = '/testigos-solarpunk';
    } else if (window.location.hostname.includes('vercel.app')) {
      basePath = ''; // Vercel uses root path
    }

    // Check if user has a stored language preference
    const storedLang = localStorage.getItem('preferred-language');
    const finalLang = storedLang || langCode;

    // Build redirect URL based on deployment environment
    const redirectUrl = basePath
      ? `${basePath}/${finalLang}/`
      : `/${finalLang}/`;

    // Add a small delay to show the page briefly
    setTimeout(() => {
      window.location.href = redirectUrl;
    }, 1000);
  });
</script>

<style>
  .redirect-container {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--espacio-xl) 0;
  }

  .redirect-content {
    max-width: 500px;
    text-align: center;
  }

  .redirect-logo {
    height: 120px;
    width: auto;
    margin-bottom: var(--espacio-lg);
    filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.1));
  }

  .redirect-content h1 {
    font-size: clamp(2rem, 4vw, 2.5rem);
    margin-bottom: var(--espacio-md);
    color: var(--text-primary);
  }

  .redirect-content p {
    font-size: 1.125rem;
    margin-bottom: var(--espacio-xl);
    color: var(--text-secondary);
  }

  .language-choice {
    display: flex;
    gap: var(--espacio-md);
    justify-content: center;
    flex-wrap: wrap;
  }

  .language-choice .btn {
    min-width: 150px;
  }

  /* Loading animation */
  .redirect-content::after {
    content: '';
    display: block;
    width: 40px;
    height: 40px;
    margin: var(--espacio-lg) auto 0;
    border: 3px solid var(--border-subtle);
    border-top-color: var(--madfam-yellow);
    border-radius: 50%;
    animation: spin 1s linear infinite;
  }

  @keyframes spin {
    to {
      transform: rotate(360deg);
    }
  }

  @media (max-width: 768px) {
    .redirect-logo {
      height: 80px;
    }

    .language-choice {
      flex-direction: column;
      align-items: center;
    }

    .language-choice .btn {
      width: 100%;
      max-width: 250px;
    }
  }
</style>
