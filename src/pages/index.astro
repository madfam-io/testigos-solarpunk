---
/**
 * Root Index Redirect - Testigos de Solarpunk
 * Intelligent language detection and redirect to appropriate locale
 *
 * @page RootRedirect
 * @description Redirects users to their preferred language version
 * @author MADFAM
 * @version 0.3.0+i18n
 */

import BaseLayout from '../layouts/BaseLayout.astro';

export const prerender = true;

// Detect deployment environment and set base path accordingly
let basePath =
  import.meta.env.BASE_URL !== undefined && import.meta.env.BASE_URL !== ''
    ? import.meta.env.BASE_URL
    : '/';

// Remove trailing slash for consistency
if (basePath.endsWith('/') && basePath !== '/') {
  basePath = basePath.slice(0, -1);
}

// Fallback for GitHub Pages if BASE_URL is not properly set
if (
  basePath === '/' &&
  typeof window !== 'undefined' &&
  window.location.hostname.includes('github.io')
) {
  basePath = '/testigos-solarpunk';
}

// Server-side language detection logic would go here
// For now, we redirect to the default language (Spanish)
// const redirectUrl = `${basePath}/${defaultLang}/`;
---

<BaseLayout title="Redirecting to language preference...">
  <!-- Language Detection and Redirect -->
  <main class="redirect-container">
    <div class="container text-center">
      <div class="redirect-content">
        <picture>
          <source
            srcset={basePath === '/'
              ? '/images/logo.webp'
              : `${basePath}/images/logo.webp`}
            type="image/webp"
          />
          <img
            src={basePath === '/'
              ? '/images/logo.png'
              : `${basePath}/images/logo.png`}
            alt="Testigos de Solarpunk"
            class="redirect-logo"
            loading="eager"
            width="120"
            height="120"
          />
        </picture>

        <h1>Bienvenido a Testigos de Solarpunk</h1>
        <p>Cargando tu experiencia solarpunk...</p>

        <!-- Loading indicator -->
        <div class="loading-indicator">
          <div class="loading-dot"></div>
          <div class="loading-dot"></div>
          <div class="loading-dot"></div>
        </div>

        <div class="loading-progress"></div>

        <!-- Manual language selection as fallback -->
        <div class="language-choice">
          <a
            href={basePath === '/' ? '/es/' : `${basePath}/es/`}
            class="btn btn-primary"
          >
            <span class="emoji-cutout emoji-button emoji-md theme-solar"
              >ðŸ‡²ðŸ‡½</span
            >
            EspaÃ±ol
          </a>
          <a
            href={basePath === '/' ? '/en/' : `${basePath}/en/`}
            class="btn btn-secondary"
          >
            <span class="emoji-cutout emoji-button emoji-md theme-solar"
              >ðŸ‡ºðŸ‡¸</span
            >
            English
          </a>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>

<script>
  // Client-side language detection and redirect
  document.addEventListener('DOMContentLoaded', () => {
    // Apply theme immediately to prevent flash
    const savedTheme = localStorage.getItem('testigos-theme-preference');
    if (savedTheme) {
      document.documentElement.setAttribute('data-theme', savedTheme);
    }

    // Detect deployment environment and set base path
    let basePath = '/';
    if (window.location.hostname.includes('github.io')) {
      basePath = '/testigos-solarpunk';
    } else if (window.location.hostname.includes('vercel.app')) {
      basePath = ''; // Vercel uses root path
    }

    // Check if user has a stored language preference
    // Always default to Spanish unless user explicitly chose English
    const storedLang = localStorage.getItem('preferred-language');
    const finalLang = storedLang || 'es'; // Always default to Spanish

    // Build redirect URL based on deployment environment
    const redirectUrl = basePath
      ? `${basePath}/${finalLang}/`
      : `/${finalLang}/`;

    // Add smooth fade-out before redirect
    const redirectContainer = document.querySelector(
      '.redirect-container'
    ) as HTMLElement;

    setTimeout(() => {
      if (redirectContainer) {
        redirectContainer.style.opacity = '0';
        redirectContainer.style.transition = 'opacity 0.3s ease-out';
      }

      // Redirect after fade-out
      setTimeout(() => {
        window.location.href = redirectUrl;
      }, 300);
    }, 500); // Show loading screen for 500ms
  });
</script>

<style>
  .redirect-container {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--espacio-xl) 0;
  }

  .redirect-content {
    max-width: 500px;
    text-align: center;
  }

  .redirect-logo {
    height: 120px;
    width: auto;
    margin-bottom: var(--espacio-lg);
    filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.1));
  }

  .redirect-content h1 {
    font-size: clamp(2rem, 4vw, 2.5rem);
    margin-bottom: var(--espacio-md);
    color: var(--text-primary);
  }

  .redirect-content p {
    font-size: 1.125rem;
    margin-bottom: var(--espacio-xl);
    color: var(--text-secondary);
  }

  .language-choice {
    display: flex;
    gap: var(--espacio-md);
    justify-content: center;
    flex-wrap: wrap;
  }

  .language-choice .btn {
    min-width: 150px;
  }

  /* Enhanced loading animation */
  .loading-indicator {
    margin-top: var(--espacio-xl);
    display: flex;
    justify-content: center;
    gap: 8px;
  }

  .loading-dot {
    width: 12px;
    height: 12px;
    background: var(--madfam-yellow);
    border-radius: 50%;
    animation: pulse 1.4s ease-in-out infinite;
  }

  .loading-dot:nth-child(1) {
    animation-delay: -0.32s;
  }

  .loading-dot:nth-child(2) {
    animation-delay: -0.16s;
  }

  @keyframes pulse {
    0%,
    80%,
    100% {
      transform: scale(0.8);
      opacity: 0.5;
    }
    40% {
      transform: scale(1.2);
      opacity: 1;
    }
  }

  /* Loading progress bar */
  .loading-progress {
    width: 100%;
    max-width: 300px;
    height: 4px;
    background: var(--border-subtle);
    border-radius: 2px;
    margin: var(--espacio-md) auto;
    overflow: hidden;
    position: relative;
  }

  .loading-progress::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    width: 30%;
    background: linear-gradient(
      90deg,
      var(--madfam-yellow) 0%,
      var(--verde-sostenible) 50%,
      var(--madfam-yellow) 100%
    );
    animation: shimmer 1.5s ease-in-out infinite;
  }

  @keyframes shimmer {
    0% {
      transform: translateX(-100%);
    }
    100% {
      transform: translateX(400%);
    }
  }

  /* Fade in animation */
  .redirect-content {
    animation: fadeIn 0.5s ease-out;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 768px) {
    .redirect-logo {
      height: 80px;
    }

    .language-choice {
      flex-direction: column;
      align-items: center;
    }

    .language-choice .btn {
      width: 100%;
      max-width: 250px;
    }
  }
</style>
