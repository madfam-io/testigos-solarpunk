<style>
  .resource-hero {
    padding: var(--espacio-xxl) 0;
    background: linear-gradient(
      135deg,
      var(--fondo-primario) 0%,
      var(--fondo-secundario) 100%
    );
    text-align: center;
  }

  .hero-content h1 {
    font-size: 2.5rem;
    margin: var(--espacio-lg) 0;
    color: var(--purpura-creativo);
  }

  .hero-description {
    font-size: 1.2rem;
    color: var(--texto-secundario);
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .resources-section {
    padding: var(--espacio-xxl) 0;
  }

  .resources-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: var(--espacio-xl);
    margin-top: var(--espacio-xl);
  }

  .resource-card {
    padding: var(--espacio-xl);
  }

  .resource-header {
    display: flex;
    align-items: center;
    gap: var(--espacio-md);
    margin-bottom: var(--espacio-lg);
    padding-bottom: var(--espacio-md);
    border-bottom: 2px solid var(--borde-claro);
  }

  .resource-header h2 {
    color: var(--verde-sostenible);
    margin: 0;
    font-size: 1.3rem;
  }

  .resource-content p {
    color: var(--texto-secundario);
    margin-bottom: var(--espacio-lg);
    line-height: 1.6;
  }

  .feature-list {
    list-style: none;
    padding: 0;
    margin-bottom: var(--espacio-lg);
  }

  .feature-list li {
    padding: var(--espacio-xs) 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    color: var(--texto-secundario);
    position: relative;
    padding-left: var(--espacio-lg);
  }

  .feature-list li:before {
    content: '‚úì';
    position: absolute;
    left: 0;
    color: var(--verde-sostenible);
    font-weight: bold;
  }

  .feature-list li:last-child {
    border-bottom: none;
  }

  .tools-section {
    padding: var(--espacio-xxl) 0;
    background-color: var(--fondo-secundario);
  }

  .tools-section h2 {
    display: flex;
    align-items: center;
    gap: var(--espacio-md);
    justify-content: center;
    margin-bottom: var(--espacio-xl);
    color: var(--amarillo-solar);
  }

  .tools-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--espacio-lg);
    margin-top: var(--espacio-xl);
  }

  .tool-card {
    background: var(--fondo-primario);
    padding: var(--espacio-lg);
    border-radius: 8px;
    border: 2px solid var(--borde-claro);
    text-align: center;
  }

  .tool-card h3 {
    color: var(--verde-sostenible);
    margin-bottom: var(--espacio-md);
  }

  .tool-card p {
    color: var(--texto-secundario);
    margin-bottom: var(--espacio-lg);
  }

  .checklist {
    text-align: left;
    margin-top: var(--espacio-md);
  }

  .checklist summary {
    color: var(--amarillo-solar);
    cursor: pointer;
    margin-bottom: var(--espacio-md);
  }

  .checklist ul {
    list-style: none;
    padding: 0;
  }

  .checklist li {
    display: flex;
    align-items: center;
    gap: var(--espacio-sm);
    padding: var(--espacio-xs) 0;
    color: var(--texto-secundario);
  }

  .idea-result {
    margin-top: var(--espacio-md);
    padding: var(--espacio-md);
    background: rgba(255, 255, 255, 0.05);
    border-radius: 8px;
    color: var(--verde-sostenible);
    font-style: italic;
    min-height: 3rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .community-section {
    padding: var(--espacio-xxl) 0;
    text-align: center;
  }

  .community-content h2 {
    color: var(--amarillo-solar);
    margin-bottom: var(--espacio-lg);
  }

  .community-content p {
    color: var(--texto-secundario);
    max-width: 600px;
    margin: 0 auto var(--espacio-xl);
    line-height: 1.6;
  }

  .community-actions {
    display: flex;
    gap: var(--espacio-lg);
    justify-content: center;
    flex-wrap: wrap;
  }

  /* Mobile Responsiveness */
  @media (max-width: 768px) {
    .hero-content h1 {
      font-size: 2rem;
    }

    .resources-grid {
      grid-template-columns: 1fr;
    }

    .tools-grid {
      grid-template-columns: 1fr;
    }

    .community-actions {
      flex-direction: column;
      align-items: center;
    }

    .community-actions .btn {
      width: 100%;
      max-width: 300px;
    }
  }
</style>

